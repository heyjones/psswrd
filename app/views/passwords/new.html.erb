<%= form_for(@password, remote: true) do |f| %>

<div class="input-group">
  <%= f.text_field :password, placeholder: 'Password', required: true, class: 'form-control' %>
  <span class="input-group-btn">
    <button type="button" class="btn btn-default">
      <%= f.label :ip do %>
      <%= f.check_box :ip, {}, request.remote_ip.to_s, '' %>
      Internal
      <% end %>
    </button>
    <%= f.submit 'Share', class: 'btn btn-primary' %>
  </span>
</div>

<% end %>

<div id="create_password" class="alert alert-success" style="display: none;">
  <button type="button" class="close">&times;</button>
  <strong>URL:</strong>
  <span class="password"></span>
</div>
